{% extends 'layoutAdmin.twig' %}

{% block body %}
<body onload="cargarOpciones();">    

        <div class="container-fluid">
            <div class="row header-laliga text-center py-3 px-5">           
                <img class="img-header" src="/images/laliga.png">
                <h3 class="text-white my-auto" id="txt-header"> No es futbol. Es LaLiga</h3>
            </div>
        </div>
     <div class="container-fluid bg-danger">
            <div class="container">
                <div class = "row justify-content-start bg-danger">
                    <nav class="navbar navbar-dark navbar-expand-md">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarText">
                            <ul id="navbar" class="nav navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_opciones" class="nav-link active" href="./opciones" >Opciones</a>
                                </li> 
                                <li class="nav-item">
                                    <a id="btn_clasificacion" class="nav-link" href="./equipos">Equipos</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_calendario" class="nav-link" href="./fechas">Partidos</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_noticias" class="nav-link" href="./noticias">Noticias</a>
                                </li>
                                                               
                                <!--<li class="nav-item">
                                    <a id="btn-estilo" class="nav-link" onclick="cambiarEstilo();"><span class="oi oi-brush"></span>Cambiar Estilo</a>
                                </li>-->
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>

       <div class="container text-dark mt-3">
        <div class="row justify-content-center">
            
             <div class="col-lg-10 text-center text-dark">

          <form class="form-opciones" novalidate >
              <div class="form-group row">
                  <label for="cant_equipos" class="col-sm-6 col-form-label">Cantidad de Equipos</label>
                    <div class="col-sm-4">
                    <input type="number" class="form-control" id="cant_equipos" name="cant_equipos" required autofocus>
                    <div class="invalid-feedback">
                      Ingrese la cantidad de equipos permitida.
                    </div>
                    </div>
                   
                  </div>

                  <div class="form-group row">
                  <label for="cant_jugadores" class="col-sm-6 col-form-label"><abbr title="Cantidad mínima de integrantes">Jugadores por Equipo</abbr></label>
                  <div class="col-sm-4">
                  <input type="number" class="form-control" id="cant_jugadores"  name="cant_jugadores" required>
                  <div class="invalid-feedback">
                    Ingrese la cantidad mínima de jugadores por equipo.
                  </div>
                  </div>

                  </div>

                  <div class="form-group row">
                  <label for="fecha_inicio" class="col-sm-6 col-form-label">Fecha de inicio</label>
                  <div class="col-sm-4">
                  <input type="text"  onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control" id="fecha_inicio" name= "fecha_inicio" required>
                  <div class="invalid-feedback">
                     Ingrese la fecha de inicio del torneo.
                  </div>
                  </div>
                  </div>
             

                <div class="form-group row">
                 <div class="col-sm-12">
                        <div class="table-responsive">
                            <table id="tabla_usuarios" class="table table-jugadores tabla-grande table-hover> 
                                <h6 id="lblJugadores" colspan="6"></h6>
                                <thead class="thead-dark"><tr>
                                        <th scope="col">Nombre</th> 
                                        <th scope="col">Email</th>
                                        <th scope="col">Editor</th>
                                    </tr>
                                </thead>
                                <tbody id="lista_usuarios"></tbody>
                            </table>
                        </div>
                    </div> 
                   </div>
        
              
             <div class="row justify-content-end">
              <div class="modal-footer">
                <input id="guardarOpciones" value="Guardar" type="submit" class="btn btn-danger"></input>
              </div> 
            </div>

          </form>

        </div>

    </div>        

{% endblock %}

{% block scripts %}
    <script src='/js/iaw-admin-opciones.js'></script>
{% endblock %}

