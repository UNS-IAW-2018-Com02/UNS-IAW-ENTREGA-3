{% extends 'layoutAdmin.twig' %}

{% block body %}
<body onload="abrirJornadas()">    

        <div class="container-fluid">
            <div class="row header-laliga text-center py-3 px-5">           
                <img class="img-header" src="/images/laliga.png">
                <h3 class="text-white my-auto" id="txt-header"> No es futbol. Es LaLiga</h3>
            </div>
        </div>
       <div class="container-fluid bg-danger">
            <div class="container">
                <div class = "row justify-content-start bg-danger">
                    <nav class="navbar navbar-dark navbar-expand-md">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarText">
                            <ul id="navbar" class="nav navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_opciones" class="nav-link " href="./opciones" >Opciones</a>
                                </li> 
                                <li class="nav-item">
                                    <a id="btn_clasificacion" class="nav-link" href="./equipos">Equipos</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_calendario" class="nav-link active" href="./fechas">Partidos</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_noticias" class="nav-link" href="./noticias">Noticias</a>
                                </li>
                                
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>

         <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div id="fixture_completo" class="text-center mt-3 text-dark">
                        <div>
                            <h4> Calendario </h4>
                            <button class="d-inline btn btn-link" id="btn_jornada_anterior" onclick="buscarJornada(this);">
                                <span class="oi oi-chevron-left"></span>
                            </button>
                            <h5 class="d-inline" id="nroJornada"></h5>
                            <button class="d-inline btn btn-link" id="btn_jornada_siguiente" onclick="buscarJornada(this);">
                                <span class="oi oi-chevron-right"></span>
                            </button>
                        </div>                       
                    </div>
                    <div class="table-responsive text-center text-dark">
                        <table class="table mt-2 table-hover tabla-laliga">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Fecha</th>
                                    <th scope="col">Hora</th>
                                    <th scope="col">Local</th>
                                    <th scope="col">-</th>
                                    <th scope="col">Visitante</th>
                                    <th scope="col" class="tabla-estadio">Estadio</th>
                                    <th scope="col" class="tabla-arbitro">Editor</th>
                                    <th scope="col">Modificar</th>
                                   
                                </tr>
                            </thead>
                                <tbody id="tabla_fixture"></tbody>
                        </table>
                    </div> 

                </div>
            </div>
        </div>
{% endblock %}
{% block scripts %}
    <script src='/js/iaw-admin-fechas.js'></script>
{% endblock %}
